<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.tebet.mojual.view.signup.step1.SignUpInfoStep1Model"/>
    </data>
    <ScrollView
            android:layout_width="match_parent" android:orientation="vertical"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/_8sdp" android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" android:orientation="vertical">

            <com.tebet.mojual.common.view.AppTextView android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:text="Your selfie photo, please capture front of your face."
                                                      android:layout_marginBottom="@dimen/_20sdp"
                                                      android:gravity="center"/>
            <ImageView android:layout_width="@dimen/_100sdp" android:layout_height="@dimen/_100sdp"
                       android:layout_gravity="center"
                       android:background="@drawable/circle_image_view"
                       android:onClick="@{()-> viewModel.onCaptureAvatar()}"
                       app:imageUrl="@{viewModel.userProfile.avatarLocal}"
                       android:src="@android:drawable/ic_menu_camera"
                       android:layout_marginBottom="@dimen/_20sdp"/>
            <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:hint="Full Name"
                                                      android:text="@={viewModel.userProfile.fullName}"
                                                      android:layout_marginBottom="@dimen/_20sdp"/>
            <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:hint="Date of Birth"
                                                      android:text="@={viewModel.userProfile.birthday}"
                                                      android:layout_marginBottom="@dimen/_20sdp"/>
            <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
                                                      android:hint="KTP Number"
                                                      android:layout_marginBottom="@dimen/_20sdp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:background="@drawable/rounded_btn_grey"
                          android:gravity="center">
                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                           android:onClick="@{()-> viewModel.onCaptureEKTP()}"
                           android:src="@drawable/signup_ktp_blank"
                           app:imageUrl="@{viewModel.userProfile.ktpLocal}"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
