<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.tebet.mojual.view.signup.step2.address.AddressInputView" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tebet.mojual.common.view.AppEditTextLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.tebet.mojual.common.view.AppEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:text="@={view.addressData.address}"
                app:validateTypeAutoDismiss="@{true}"
                app:validateEmpty="@{true}" />
        </com.tebet.mojual.common.view.AppEditTextLayout>

        <com.tebet.mojual.common.view.AppEditTextLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.tebet.mojual.common.view.AppEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kelurahan"
                android:text="@={view.addressData.kelurahan}"
                app:validateTypeAutoDismiss="@{true}"
                app:validateEmpty="@{true}" />
        </com.tebet.mojual.common.view.AppEditTextLayout>

        <com.tebet.mojual.common.view.AppEditTextLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.tebet.mojual.common.view.AppEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kecamatan"
                android:text="@={view.addressData.kecamatan}"
                app:validateTypeAutoDismiss="@{true}"
                app:validateEmpty="@{true}" />
        </com.tebet.mojual.common.view.AppEditTextLayout>

        <com.tebet.mojual.common.view.AppEditTextLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.tebet.mojual.common.view.AppEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RT/RW"
                android:text="@={view.addressData.rtrw}"
                app:validateTypeAutoDismiss="@{true}"
                app:validateEmpty="@{true}" />
        </com.tebet.mojual.common.view.AppEditTextLayout>

        <com.tebet.mojual.common.view.AppEditTextLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.tebet.mojual.common.view.AppAutoCompleteEditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:text="@={view.addressData.city}"
                app:validateTypeAutoDismiss="@{true}"
                app:validateEmpty="@{true}" />

        </com.tebet.mojual.common.view.AppEditTextLayout>

        <com.tebet.mojual.common.view.AppEditTextLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp">

            <com.tebet.mojual.common.view.AppAutoCompleteEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postal Code"
                android:inputType="number"
                android:text="@={view.addressData.postalCode}"
                app:validateTypeAutoDismiss="@{true}"
                app:validateEmpty="@{true}" />

        </com.tebet.mojual.common.view.AppEditTextLayout>

        <com.tebet.mojual.common.view.AppEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Choose on Map"
            android:onClick="@{()-> view.onChooseMapClick()}"
            android:text="@={view.addressData.mapLocation}" />
    </LinearLayout>
</layout>
