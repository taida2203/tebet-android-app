<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.tebet.mojual.view.qualityreject.OrderRejectViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">


        <com.tebet.mojual.common.view.AppTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:text="@string/order_reject_detail" />

        <com.tebet.mojual.common.view.AppTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:text="@string/order_reject_quest_1" />

        <com.tebet.mojual.common.view.AppEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_history"
            android:hint="Your answer"
            android:text="@={viewModel.rejectMessage1}" />


        <com.tebet.mojual.common.view.AppTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:text="@string/order_reject_quest_2" />

        <com.tebet.mojual.common.view.AppEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_history"
            android:hint="Your answer"
            android:text="@={viewModel.rejectMessage2}" />

        <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tebet.mojual.common.view.AppButtonRounded
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:enabled="@{!viewModel.isLoading &amp;&amp; viewModel.items.size() > 0}"
                android:onClick="@{()-> viewModel.onSubmitClick()}"
                android:text="@string/order_reject_buttom_confirm" />
        </LinearLayout>
    </LinearLayout>
</layout>
