<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="com.tebet.mojual.view.signup.step3.SignUpInfoStep3Model"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:background="@color/white" android:orientation="vertical">
        <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:hint="Bank Name"
                                                  android:text="@={viewModel.userProfile.bankName}"
                                                  android:layout_marginBottom="@dimen/_10sdp"/>
        <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:hint="Bank account number"
                                                  android:text="@={viewModel.userProfile.bankCode}"
                                                  android:layout_marginBottom="@dimen/_10sdp"/>
        <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:hint="Bank account name"
                                                  android:text="@={viewModel.userProfile.bankRegionName}"
                                                  android:layout_marginBottom="@dimen/_10sdp"/>
        <com.tebet.mojual.common.view.AppEditText android:layout_width="match_parent"
                                                  android:text="@={viewModel.userProfile.bankRegionCode}"
                                                  android:layout_height="wrap_content"
                                                  android:hint="Bank region"
                                                  android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>
</layout>
