<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_20sdp"
         />

    <com.tebet.mojual.common.rtc.view.SquTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_16ssp"
        app:font_style="bold" />

    <com.tebet.mojual.common.rtc.view.SquTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:font_style="bold"
        android:textAlignment="center"
        android:textSize="@dimen/_12ssp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:id="@+id/cakap_chat_session_run_out_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"
            app:font_style="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            android:textSize="@dimen/_16ssp"
            app:font_style="bold"
            app:layout_constraintLeft_toRightOf="@id/cakap_chat_session_run_out_hours"
            app:layout_constraintRight_toLeftOf="@id/cakap_chat_session_run_out_minutes"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:id="@+id/cakap_chat_session_run_out_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_32sdp"
            android:layout_marginRight="@dimen/_32sdp"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"
            app:font_style="bold"
            app:layout_constraintLeft_toRightOf="@id/cakap_chat_session_run_out_hours"
            app:layout_constraintRight_toLeftOf="@id/cakap_chat_session_run_out_seconds"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            android:textSize="@dimen/_16ssp"
            app:font_style="bold"
            app:layout_constraintLeft_toRightOf="@id/cakap_chat_session_run_out_minutes"
            app:layout_constraintRight_toLeftOf="@id/cakap_chat_session_run_out_seconds"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:id="@+id/cakap_chat_session_run_out_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_16sdp"
            android:gravity="center"
            android:textSize="@dimen/_16ssp"
            app:font_style="bold"
            app:layout_constraintLeft_toRightOf="@id/cakap_chat_session_run_out_minutes"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="hours"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="@id/cakap_chat_session_run_out_hours"
            app:layout_constraintRight_toRightOf="@id/cakap_chat_session_run_out_hours"
            app:layout_constraintTop_toBottomOf="@id/cakap_chat_session_run_out_hours" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="minutes"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="@id/cakap_chat_session_run_out_minutes"
            app:layout_constraintRight_toRightOf="@id/cakap_chat_session_run_out_minutes"
            app:layout_constraintTop_toBottomOf="@id/cakap_chat_session_run_out_minutes" />

        <com.tebet.mojual.common.rtc.view.SquTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="seconds"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="@id/cakap_chat_session_run_out_seconds"
            app:layout_constraintRight_toRightOf="@id/cakap_chat_session_run_out_seconds"
            app:layout_constraintTop_toBottomOf="@id/cakap_chat_session_run_out_seconds" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>